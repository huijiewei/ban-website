---
import NavLink from '../core/NavLink.astro';
import ToggleMenu from '../core/ToggleMenu.astro';
import ToggleTheme from '../core/ToggleTheme.astro';
---

<header
  id="header"
  class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 dark:bg-slate-900 dark:md:bg-slate-900/90 md:backdrop-blur-sm"
>
  <div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
    <div class="flex justify-between">
      <a aria-label="主页" href="/">
        <svg height="50" viewBox="0 0 1024 1024" width="50" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <radialGradient cx="19.247%" cy="99.465%" fx="19.247%" fy="99.465%" id="a" r="108.96%">
              <stop offset="0%" stop-color="#09F"></stop>
              <stop offset="60.975%" stop-color="#A033FF"></stop>
              <stop offset="93.482%" stop-color="#FF5280"></stop>
              <stop offset="100%" stop-color="#FF7061"></stop>
            </radialGradient>
          </defs>
          <g fill="none" fill-rule="evenodd">
            <path fill="none" d="M0 0h1024v1024H0z"></path>
            <path
              d="M512 122c-225.332 0-400 165.056-400 388 0 116.614 47.792 217.382 125.622 286.984 6.534 5.848 10.478 14.04 10.746 22.808l2.178 71.152c.696 22.696 24.14 37.464 44.908 28.296l79.394-35.048a31.93 31.93 0 0 1 21.364-1.568C432.696 892.656 471.526 898 512 898c225.332 0 400-165.056 400-388S737.332 122 512 122z"
              fill="url(#a)"></path>
            <path
              d="M271.802 623.469l117.5-186.416c18.69-29.656 58.714-37.04 86.758-16.008l93.454 70.09a23.998 23.998 0 0 0 28.91-.082l126.214-95.788c16.846-12.784 38.836 7.376 27.562 25.266L634.7 606.95c-18.692 29.654-58.716 37.04-86.758 16.006l-93.456-70.092a24 24 0 0 0-28.91.084l-126.214 95.788c-16.846 12.783-38.836-7.377-27.56-25.266z"
              fill="#FFF"></path>
          </g>
        </svg>
      </a>
      <div class="flex items-center md:hidden">
        <ToggleTheme />
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-[calc(100vh-100px)] md:h-auto overflow-y-auto md:overflow-visible"
      aria-label="Main navigation"
    >
      <ul class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center w-full md:w-auto text-xl md:text-base">
        <li>
          <NavLink path="/blog" name="博客" />
        </li>
        <li>
          <NavLink path="/tips" name="技巧" />
        </li>
        <li>
          <NavLink path="/about" name="关于" />
        </li>
        <li class="md:hidden">
          <a
            target="_blank"
            rel="noreferrer"
            class="font-bold hover:text-gray-900 dark:hover:text-white py-1 px-3 flex items-center transition duration-150 ease-in-out"
            href="https://github.com/huijiewei/ban-site"
          >
            Github
          </a>
        </li>
      </ul>
      <div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
        <div class="hidden items-center md:flex">
          <ToggleTheme iconClass="w-5 h-5" />
          <a
            target="_blank"
            rel="noreferrer"
            href="https://github.com/huijiewei/run-site"
            class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
            aria-label="Github"
          >
            <svg
              class="h-5 w-5"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="2 2 20 20"
              stroke="none"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M12 2C6.475 2 2 6.475 2 12a9.994 9.994 0 0 0 6.838 9.488c.5.087.687-.213.687-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.338 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.688c-.1-.25-.45-1.275.1-2.65c0 0 .837-.262 2.75 1.026a9.28 9.28 0 0 1 2.5-.338c.85 0 1.7.112 2.5.337c1.912-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.562 4.938c.362.312.675.912.675 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.016 10.016 0 0 0 22 12c0-5.525-4.475-10-10-10Z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
