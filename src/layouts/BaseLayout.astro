---
import '~/styles/base.css';
import MetaTag from '~/components/core/MetaTag.astro';
import BasicScript from '~/components/core/BasicScript.astro';

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN" class="motion-safe:scroll-smooth">
  <head>
    <MetaTag {...meta} />
  </head>
  <body class="text-gray-900 dark:text-slate-300 bg-white dark:bg-slate-900">
    <slot />
    <BasicScript />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
